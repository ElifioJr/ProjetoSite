@{
}

@model List<ProjetoSite.Models.Entities.Fornecedor>

<h1>Litsa de Fornecedores</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>CNPJ</th>
            <th>Nome Fantasia</th>
            <th> </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var fornecedor in Model) {
            <tr>
                <td>@fornecedor.Id</td>
                <td>@fornecedor.Name</td>
                <td>@fornecedor.Email</td>
                <td>@fornecedor.CNPJ</td>
                <td>@fornecedor.NomeFantasia</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Fornecedor" asp-action="Edit" asp-route-id="@fornecedor.Id">Edit</a>
                </td>

            </tr>
        }
    </tbody>
</table>