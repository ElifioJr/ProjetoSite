@model ProjetoSite.Models.LoginViewModel

<h2>Login de Fornecedor</h2>

@using(Html.BeginForm("Login","Fornecedor",FormMethod.Post)) {
    <div class="form-group">
        @Html.LabelFor(model => model.ValidarUsuario)
        @Html.TextBoxFor(model => model.ValidarUsuario,new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ValidarUsuario,"",new { @class = "text-danger" })
    </div>

    <br>

    <button type="submit" class="btn btn-primary" asp-action="Login" asp-controller="LoginValidate">Entrar</button>

    <br>
}